{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "dom"
    ],
    "paths": {
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
